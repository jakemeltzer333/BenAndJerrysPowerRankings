<div class = 'flavors-container'>
<h1 class = 'flavor-header'><%= @category.name %> Flavors</h1>

<ol class = 'flavors-list'>
    <% @flavors.each do |flavor| %>
        <li class = 'flavor'> <%= link_to flavor.name, category_flavor_path(@category, flavor) %></li>
        <%= link_to "Edit Flavor", edit_category_flavor_path(@category, flavor) %>
    <% end %>    
</ol>

<div class = 'links'>
<%= link_to "Add New Flavor", new_category_flavor_path(params[:id]) %><br>

<%= link_to "Flavor Categories", categories_path %>
</div>
</div>